<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
	<appenders>
		<Console name="Console" target="SYSTEM_ERR">
			<PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
		</Console>
		 <RollingFile name="FixNameFileAppender" fileName="/Users/peter/Data/PDB_CHAINS/spark.log" append="true" filePattern="/Users/peter/Data/PDB_CHAINS/spark.log.%d{yyyy-MM-dd}.%i">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <OnStartupTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="5"/> <!-- keeps up to 5 files -->
        </RollingFile>
	</appenders>
	<loggers>
		<root level="info">
			<appender-ref ref="FixNameFileAppender"/>
		</root>
	</loggers>
</configuration>